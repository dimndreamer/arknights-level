{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"vue"
	],
	"rules": {
		"vue/script-indent": [
			"error",
			4
		],
		"vue/html-indent": [
			"error",
			4
		],
		"indent": [
			"error",
			4
		],
		"quotes": [
			"error",
			"single"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"space-in-parens": [
			"error",
			"never"
		],
		"space-before-blocks": [
			"error",
			"always"
		]
	}
}